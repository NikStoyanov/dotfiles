[user]
        email = nik@nikstoyanov.me
        name = Nikola Stoyanov
[ui "color"]
	ui = always
[color]
	ui = true
[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
	safecrlf = true
	editor = nvim
[merge]
	tool = vimdiff
[mergetool "vimdiff"]
	path = nvim
[alias]
        lop = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
        st = status -sb
	c = commit
	s = status
	lg = log --oneline
	last = log -1 HEAD
